      td
        buttony MCiLightGreen
    &.incorrect
      td
        buttony MCiPink
    td,th
      text-align center
      vertical-align middle
      border 1px solid MCiOffWhite 
      padding 3px
      border-radius 4px
    th
      buttony MCiLightBlue
    td
      .blank
        buttony MCiOffWhite
        width 1em
        display inline-block
        border-radius 3px
  
