#notepad
  margin-left:auto;
  margin-right:auto;

tenframesquare = 14px


#clouds
  float right
  padding 3px
  border 3px solid MCiDarkGray
  border-radius 12px
  font-size 1.5em
  background-color MCiOffWhite
  background-color rgba(MCiOffWhite,0.7)
  box-shadow inset 0 0 5px 0 rgba(MCiDarkBlue, 0.9)
  text-shadow 0px 1px 1px rgba(MCiOffWhite,0.5)
  font-weight bold
  display table
  height auto
  width auto
  .box
    float left
    margin 7px
    border 1px solid MCiDarkGray
    border-radius 10px
    padding 3px
    padding-top 5px
    buttony MCiPaleBlue
    &.correct 
      buttonyy MCiDarkGreen
    &.incorrect 
      buttonyy MCiPink
    div 
      float left
      margin 1px
    .model 
      float none
      margin-left auto
      margin-right auto
      .group 
        float none
        border 2px solid MCiDarkGray
        height 10px
        margin-left auto
        margin-right auto
      .block
        border 1px solid MCiDarkGray
        height 6px
        width 6px
        background-color MCiMediumGray
    .blank 
      text-align center
      height tenframesquare * 5
      width tenframesquare * 2
      margin 2px
      border 1px solid MCiDarkGray
      border-radius 4px
      background-color MCiOffWhite
    .operator 
      margin-top tenframesquare * 2
      height tenframesquare * 3
    .number 
      height  1em
      margin 3px
      margin-bottom 8px
      &.blank 
        padding 0px
        min-height 1em
        margin 2px
        margin-bottom 7px
        padding-bottom 4px
    .fix 
      height 1em
      text-align center
      width tenframesquare * 2
      
#clouds .box div.tenframe, #clouds .box div.subframe, #selectbar div.tenframe
  float left
  height tenframesquare * 5
  width tenframesquare * 2
  margin 3px
  div
    margin 0px
    height 20%
    width 50%
    float right

div.tenframe 
  position relative
  z-index 1
  //background-image  url('http://mathcoach.net/Interactive/Interactive3/media/tenframe/dot0s.png')
  img
    position absolute
    top 0px
    left 0px
    height 100%
    width 100%
  img.tenframe
    z-index 2
  img.full
    z-index -1
  &.full 
    img.full
      z-index 3
      //background-image  url('http://mathcoach.net/Interactive/Interactive3/media/tenframe/dot10s.png')
  div.dot 
    position relative
    z-index 4
    //background-image  url('http://mathcoach.net/Interactive/Interactive3/media/tenframe/singledots.png')
  div.dash 
    position relative
    z-index 5
    //background-image  url('http://mathcoach.net/Interactive/Interactive3/media/tenframe/singledashdots.png')
  .hidden 
    position relative
    z-index -1
    display none

.subframe 
  position relative
  z-index 1
  //background-image  url('http://mathcoach.net/Interactive/Interactive3/media/tenframe/sub0s.png')
  background-color MCiWhite
  border-radius 4px
  img
    position absolute
    top 0px
    left 0px
    height 100%
    width 100%
  img.subframe
    z-index 2
  div.dash 
    position relative
    z-index 3
    //background-image  url('http://mathcoach.net/Interactive/Interactive3/media/tenframe/singledashs.png')

#clouds br
  clear left
  width 0px
  font-size 0.001 em

